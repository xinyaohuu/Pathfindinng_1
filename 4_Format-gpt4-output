import re
import csv

fff = "quick"

# Define the input and output file paths
input_file_path = f'{fff}.txt'
output_file_path = f'{fff}.csv'

# Initialize lists to store extracted answers and alternative answers
answers = []
alternative_answers = []

# Regular expression patterns to match answers and alternative answers
answer_pattern = r'startxinyao(.*?)endxinyao'
alternative_pattern = r'starthu(.*?)endhu'

# Read the input file
with open(input_file_path, 'r') as file:
    file_contents = file.read()

# Use regular expressions to find all matches for answers and alternative answers
answers.extend(re.findall(answer_pattern, file_contents, re.DOTALL))
alternative_answers.extend(re.findall(alternative_pattern, file_contents, re.DOTALL))

# Determine the maximum length of answers and alternative answers lists
max_length = max(len(answers), len(alternative_answers))

# Create a list of rows for the CSV
csv_data = []

for i in range(max_length):
    row = []
    
    # Add the answer to the first column if available
    if i < len(answers):
        row.append(answers[i])
    else:
        row.append('')  # Empty cell if no answer
    
    # Add the alternative answer to the second column if available
    if i < len(alternative_answers):
        row.append(alternative_answers[i])
    else:
        row.append('')  # Empty cell if no alternative answer
    
    csv_data.append(row)

# Write the data to the CSV file
with open(output_file_path, 'w', newline='') as csv_file:
    csv_writer = csv.writer(csv_file)
    
    # Write the header row
    csv_writer.writerow(['Answer', 'Alternative Answer'])
    
    # Write the data rows
    csv_writer.writerows(csv_data)

print(f'{len(answers)} answers and {len(alternative_answers)} alternative answers extracted and saved to {output_file_path}.')




##Cleanup path = 只需要把包含o and ...的去掉 -wrong_just for backup

import csv
import re
import ast

# Specify input and output file paths
input_csv_path = f"{fff}.csv"
output_csv_path = f"{fff}_cleanup.csv"  # You can use the same input file name to overwrite it or a different name to create a new file

# Open the input CSV file for reading
with open(input_csv_path, 'r', newline='') as input_csv_file: 
    # Create a CSV reader object
    csv_reader = csv.reader(input_csv_file)
    
    # Open the output CSV file for writing
    with open(output_csv_path, 'w', newline='') as output_csv_file:
        # Create a CSV writer object
        csv_writer = csv.writer(output_csv_file)
        
        # Loop through the rows in the input CSV file
        for row in csv_reader:
            if "o" in row[1] or "..." in row[1] or "a" in row[1]:
                alternative_answer = []
                length = 0
                output_row = [row[0], row[1], alternative_answer, length]

            elif row[1].count("[") > 1:
                alternative_answer = []
                length = 0
                output_row = [row[0], row[1], alternative_answer, length]


            else:
                alternative_answer = row[1]
                length = len(ast.literal_eval(row[1]))
                output_row = [row[0], row[1], alternative_answer, length]
                    

            csv_writer.writerow(output_row)

            
                
